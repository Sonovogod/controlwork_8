@model Forum.Service.ViewModels.Themes.CreateThemeViewModel

@{
    ViewBag.Title = "Добавление новой темы";
    Layout = "_Layout";
}

<h2>Запоните поля для добавления новой темы</h2>
<div class="row">
    <div class="col-md-6">
        <form asp-action="createTheme" method="post" asp-antiforgery="true">
            <div class="form-group mb-3">
                <label for="themeTitle" class="mb-2" asp-for="Title"></label>
                <input asp-for="@Model.Title"
                       type="text"
                       class="form-control"
                       id="themeTitle"
                       placeholder="Как стать успешным программистом">
                <span class="text-danger" asp-validation-for="@Model.Title"></span>
            </div>
            <div class="form-group mb-3">
                <label for="themeDesc" class="mb-2" asp-for="Content"></label>
                <textarea asp-for="@Model.Content"
                       type="text"
                       class="form-control"
                       id="themeDesc"
                       placeholder="Меньше спать больше делать, ждаст ду ит бро синк абаут ит">
                </textarea>
                <span class="text-danger" asp-validation-for="@Model.Content"></span>
            </div>
            <button type="submit" class="btn btn-outline-info mt-3">Создать</button>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
